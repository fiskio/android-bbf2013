<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luckybrews.bbf2013"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/savepubs"
        android:label="@string/app_name" 
        >
		
        <activity
            android:name="com.luckybrews.bbf2013.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.luckybrews.bbf2013.BeerListActivity"
            android:label="@string/beerlist" >
        </activity>
        <activity
            android:name="com.luckybrews.bbf2013.DetailsActivity"
            android:label="@string/details" >
        </activity>
        <activity
            android:name="com.luckybrews.bbf2013.MyDrinksActivity"
            android:label="@string/mydrinks" >
        </activity>
        <activity
            android:name="com.luckybrews.bbf2013.WishlistActivity"
            android:label="@string/wishlist" >
        </activity>
    </application>

</manifest>